{
  "author": {
    "name": "Hutson Betts",
    "email": "hutson@hyper-expanse.net",
    "url": "https://gitlab.com/hutson"
  },
  "bin": {},
  "bugs": "https://gitlab.com/hyper-expanse/open-source/configuration-packages/conventional-changelog-config/issues",
  "description": "Standard conventional-changelog configuration as used by projects maintained by Hutson Betts (@hutson).",
  "engines": {
    "node": ">=6.9.0"
  },
  "files": [
    "src/**/!(*.spec).js"
  ],
  "homepage": "https://gitlab.com/hyper-expanse/open-source/configuration-packages/conventional-changelog-config#readme",
  "keywords": [
    "conventional-changelog",
    "configuration"
  ],
  "license": "Apache-2.0",
  "main": "src/index.js",
  "mocha": {
    "checkLeaks": true,
    "fullTrace": true,
    "inlineDiffs": true,
    "recursive": true,
    "reporter": "progress"
  },
  "name": "@hutson/conventional-changelog-config",
  "renovate": {
    "extends": [
      "config:base",
      ":maintainLockFilesWeekly",
      ":rebaseStalePrs",
      ":automergeDigest",
      ":gitSignOff",
      ":automergeMinor",
      ":preserveSemverRanges"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/hyper-expanse/open-source/configuration-packages/conventional-changelog-config.git"
  },
  "scripts": {
    "test": "yarn semistandard 'src/**/*.js' && nyc mocha src/**/*.spec.js"
  },
  "version": "1.0.0",
  "dependencies": {
    "conventional-changelog-angular": "^5.0.0"
  },
  "devDependencies": {
    "@hutson/conventional-changelog-config": "^2.0.0",
    "@hutson/nyc-config": "^2.0.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.0",
    "mocha": "^6.0.0",
    "npm-publish-git-tag": "^3.0.0",
    "nyc": "^13.0.0",
    "semantic-release-gitlab": "^7.0.0",
    "semistandard": "^13.0.1"
  }
}
