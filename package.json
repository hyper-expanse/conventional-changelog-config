{
  "author": {
    "name": "Hutson Betts",
    "email": "hutson@hyper-expanse.net",
    "url": "https://hyper-expanse.net/hutson"
  },
  "bin": {},
  "bugs": "https://github.com/hyper-expanse/conventional-changelog-config/issues",
  "description": "Standard conventional-changelog configuration as used by projects maintained by Hutson Betts (@hutson).",
  "engines": {
    "node": ">=10.13.0"
  },
  "files": [
    "src/**/!(*.spec).js"
  ],
  "homepage": "https://github.com/hyper-expanse/conventional-changelog-config#readme",
  "keywords": [
    "conventional-changelog",
    "configuration"
  ],
  "license": "Apache-2.0",
  "main": "src/index.js",
  "mocha": {
    "checkLeaks": true,
    "fullTrace": true,
    "inlineDiffs": true,
    "recursive": true,
    "reporter": "progress"
  },
  "name": "@hutson/conventional-changelog-config",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/cli.js",
      "src/**/*.spec.js",
      "src/**/*.mock.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":maintainLockFilesWeekly",
      ":rebaseStalePrs",
      ":automergeDigest",
      ":gitSignOff",
      ":automergeMinor",
      ":preserveSemverRanges"
    ],
    "docker": {
      "pinDigests": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyper-expanse/conventional-changelog-config.git"
  },
  "scripts": {
    "test": "yarn semistandard 'src/**/*.js' && nyc mocha src/**/*.spec.js"
  },
  "version": "1.0.0",
  "dependencies": {
    "conventional-changelog-angular": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "semistandard": "^14.0.0"
  }
}
